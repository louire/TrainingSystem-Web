@code {
    string Duration { get; set; } = "2 horas";
    DateTime TrainingDate { get; set; } = DateTime.Now;
    TimeOnly TrainingHour { get; set; } = TimeOnly.FromDateTime(DateTime.Now);
    string ThemeArea { get; set; } = "EHS";
    string Agent { get; set; } = "Externo";
    string TrainmentType { get; set; } = "Masivo";
    string Modality { get; set; } = "Virtual";
    string City { get; set; } = "Matamoros";
    string State { get; set; } = "Tamaulipas";
    string Instructor { get; set; } = "Laura";
    string Entrenamiento { get; set; } = "Recipientes sujetos a presion";
    string Empleado { get; set; } = "Loui Recio";



}