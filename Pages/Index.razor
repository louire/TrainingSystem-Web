@page "/"
<h2 class="pb-2">Sistema de Asistencia de Entrenamientos</h2>

<DxFormLayout>
    <DxFormLayoutItem Caption="Fecha de Entrenamiento: ">
        <DxDateEdit @bind-Date="@TrainingDate"
                    TimeSectionVisible="true"
                    CssClass="cw-320" />
        <p class="demo-text cw-320 mt-2">
            Date: <b>@TrainingDate.ToString("dddd, dd MMMM yyyy HH:mm:ss")</b>
        </p>

        @code {
        DateTime DateTimeValue { get; set; } = DateTime.Now;
        }
    </DxFormLayoutItem>

    <br/>

    <DxFormLayoutItem Caption="Duracion: ">
        <DxTextBox @bind-Text="@Duration" />
    </DxFormLayoutItem>
    <DxFormLayoutItem Caption="Area Tematica: ">
        <DxTextBox @bind-Text="@ThemeArea" />
    </DxFormLayoutItem>
    <DxFormLayoutItem Caption="Agente: ">
        <DxTextBox @bind-Text=@Agent />
    </DxFormLayoutItem>
    <DxFormLayoutItem Caption="Tipo de Entrenamiento: ">
        <DxTextBox @bind-Text=@TrainmentType />
    </DxFormLayoutItem>
    <DxFormLayoutItem Caption="Modalidad: ">
        <DxTextBox @bind-Text=@Modality />
    </DxFormLayoutItem>
    <DxFormLayoutItem Caption="Municipio: ">
        <DxTextBox @bind-Text=@City />
    </DxFormLayoutItem>
    <DxFormLayoutItem Caption="Estado: ">
        <DxTextBox @bind-Text=@State />
    </DxFormLayoutItem>
    <DxFormLayoutItem Caption="Instructor: ">
        <DxTextBox @bind-Text=@Instructor />
    </DxFormLayoutItem>

    <DxFormLayoutItem Caption=" ">
        <DxButton Text="Establecer entrenamiento" />
    </DxFormLayoutItem>
</DxFormLayout>

<br />
 <DxFormLayout>
     <DxFormLayoutItem Caption="Entrenamiento Dado" >
         <DxTextBox @bind-Text="Entrenamiento" />
</DxFormLayoutItem>
    <DxFormLayoutItem Caption="Empleado: ">
        <DxTextBox @bind-Text=@Empleado />
    </DxFormLayoutItem>
    <DxFormLayoutItem Caption=" ">
        <DxButton Text="Escanear" />
    </DxFormLayoutItem>
 </DxFormLayout>

<br />

